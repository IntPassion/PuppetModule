# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
	. ~/.bashrc
fi

# User specific environment and startup programs

PATH=$PATH:$HOME/bin

# Managed by Puppet
<% scope.lookupvar('export').each do |key, value| -%>
export <%= key %>=<%= value %>
<% end -%>
umask <%= scope.lookupvar('umask') %>
